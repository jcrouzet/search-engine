package Search;





import java.io.File;
import java.util.ArrayList;
import java.util.Collections;
import java.util.HashMap;
import java.util.HashSet;






import tools.Normalizer;

public class Search {



	public File corpus;
	public static Normalizer normalizer;
	public  File index_; 
	public static  String query ;



	public Search (Normalizer normalizer, File index_ , String query )
	{
		Search.normalizer = normalizer;
	
		this.index_ = index_;
		Search.query = query ;
		
	}
	


	public static void search (){
	HashMap <String , Integer> tf =  new HashMap <String ,Integer> () ; 
	 ArrayList<String> words = getNormalizer().normalize(query);
	 HashSet<String> wordsInFiles = new HashSet<String>(words) ;

			for (String term : wordsInFiles)
			{
				term =  term.toLowerCase();
				Integer value =  Collections.frequency(words, term);
                tf.put (term , value) ;
			}

	





}


	public static Normalizer getNormalizer() {
		return normalizer;
	}


	public static void setNormalizer(Normalizer normalizer) {
		Search.normalizer = normalizer;
	}
}